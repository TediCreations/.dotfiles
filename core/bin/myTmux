#!/usr/bin/env bash
# Attach to my standard tmux session or create it.
#
# e.g: ./myTmux
#

# Secure BASH chacks
set -o errexit
set -o pipefail
set -o nounset
#set -o xtrace

# Set magic variables for current file & dir
__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
__file="${__dir}/$(basename "${BASH_SOURCE[0]}")"
__base="$(basename ${__file} .sh)"
__root="$(cd "$(dirname "${__dir}")" && pwd)"
__user="$(logname)"
#arg1="${1:-}"

#echo "Dir  = '${__dir}'"
#echo "File = '${__file}'"
#echo "Base = '${__base}'"
#echo "Root = '${__root}'"
#echo "User = '${__user}'"

################################################################################

echo "Hello"

if [ -z "${TMUX}" ]
then
    #$(tmux attach -t TMUX || tmux new -s TMUX -c "$PWD")
    echo "Inside"
fi
